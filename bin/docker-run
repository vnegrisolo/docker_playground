#!/usr/bin/env bash

host='dev'

ips=`cat /etc/hosts | grep -v ^\# | grep ${host} | awk '{print $1}'`
echo "ips=${ips}"

hosts="${hosts}--add-host=${host}:127.0.0.1 "
for ip in ${ips} ; do
  hosts="${hosts}--add-host=${host}:${ip} "
done
echo "hosts=${hosts}"

docker run --rm -p 3000:3000 ${hosts} docker_playground
